<div class="row row-cols-1 row-cols-md-2">
  <% contents.each do |content| %>
    
    <div class="col mb-4 ">
      <%= link_to content do %>
      <div class="card text-center">
        <%= image_tag content.image.cut.url , class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= content.title %></h5>
          <p class="card-text text-right"><%= content.place %></p>
          <div class="delete" >
          <div><%= link_to yield(:delete_name), content, class: yield(:delete_class), method: :delete %></div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
 
  <% end %>
</div>



<%= paginate contents %>